<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="LLM.Interact.UI.MainWindow"
		xmlns:vm="using:LLM.Interact.UI.DTO"
		xmlns:c="clr-namespace:LLM.Interact.UI.Core"
		mc:Ignorable="d"
		Width="900" Height="600"
		WindowStartupLocation="CenterScreen"
		CanResize="False"
		Title="LLM.Interact.UI"
		>
	<Window.Resources>
		<c:BoolToBubbleColorConverter x:Key="BoolToBubbleColorConverter" />
		<c:BoolToHorizontalAlignmentConverter x:Key="BoolToHorizontalAlignmentConverter"/>
	</Window.Resources>
	<Window.Styles>
		<Style Selector="Button:pointerover">
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style Selector="CheckBox:pointerover">
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style Selector="ComboBox:pointerover">
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style Selector="Button:focus">
			<Setter Property="Background" Value="Gray"/>
		</Style>
	</Window.Styles>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="LightGray">
			<StackPanel>
				<StackPanel Orientation="Horizontal" Margin="10">
					<Label
					Content="类型:"
					Margin="10 0 0 0"
					VerticalAlignment="Center" />
					<ComboBox
						x:Name="ai_type"
						VerticalAlignment="Center"
						Width="125"
						Margin="0">
						<ComboBoxItem Content="Ollama" />
					</ComboBox>
					<Label
						Content="Url:"
						Margin="10 0 0 0"
						VerticalAlignment="Center" />
					<TextBox
							x:Name="ai_url"
							VerticalAlignment="Center"
							Margin="10,0,0,0"
							Width="250"
							Height="20"
							TabIndex="0"
							Text="" />
					<Button
						x:Name="ai_confirm"
						Click="ConfirmClick"
						VerticalAlignment="Center"
						Content="确定"
						Margin="10 0 0 0"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" Margin="10 0">
					<Label
					Content="模型:"
					Margin="10 0 0 0"
					VerticalAlignment="Center" />
					<ComboBox
						x:Name="ai_model"
						VerticalAlignment="Center"
						Width="125"
						Margin="0" />
					<Button
						x:Name="ai_con"
						Click="StartClick"
						VerticalAlignment="Center"
						Content="连接"
						Margin="10 0 0 0"/>
					<Button
						x:Name="ai_dis"
						Click="DisClick"
						VerticalAlignment="Center"
						Content="断开"
						Margin="10 0 0 0"/>
				</StackPanel>
			</StackPanel>
		</Border>
		<Border Grid.Row="1" Background="LightGray">
			<Grid RowDefinitions="4*,1*">
				<Border Grid.Row="0" Background="LightBlue">
					<ListBox
						x:Name="ai_communication"
						x:DataType="vm:MessageModel"
						ScrollViewer.VerticalScrollBarVisibility="Auto"
						BorderThickness="0"
						Background="Transparent">
						<ListBox.Styles>
							<!-- 移除默认选中效果 -->
							<Style Selector="ListBoxItem:selected">
								<Setter Property="Background" Value="Transparent"/>
							</Style>
						</ListBox.Styles>
						<ListBox.ItemTemplate>
							<DataTemplate x:DataType="vm:MessageModel">
								<!-- 消息项模板 -->
								<StackPanel HorizontalAlignment="{Binding IsUserMessage, Converter={StaticResource BoolToHorizontalAlignmentConverter}}"
											Orientation="Horizontal"
											Spacing="8">
									<!-- AI 头像 -->
									<Panel IsVisible="{Binding !IsUserMessage}" VerticalAlignment="Top">
										<Ellipse Width="32" Height="32" Fill="#2196F3">
											<Ellipse.Styles>
												<Style Selector="Ellipse">
													<Setter Property="Opacity" Value="0.8"/>
												</Style>
											</Ellipse.Styles>
										</Ellipse>
									</Panel>

									<!-- 消息内容 -->
									<Border CornerRadius="8"
											Background="{Binding IsUserMessage, Converter={StaticResource BoolToBubbleColorConverter}}"
											Padding="12">
										<TextBlock Text="{Binding Content}"
												  TextWrapping="Wrap"
												  MaxWidth="400"/>
									</Border>

									<!-- 用户头像 -->
									<Panel IsVisible="{Binding IsUserMessage}" VerticalAlignment="Top">
										<Ellipse Width="32" Height="32" Fill="#4CAF50"/>
									</Panel>
								</StackPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</Border>
				<Border Grid.Row="1" Background="WhiteSmoke">
					<DockPanel>
						<TextBox
							x:Name="ai_ask"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Margin="10,0,0,0"
							Width="500"
							Height="20"
							TabIndex="0"
							Watermark="给 AI 发送消息"
							Text="" />
						<Button
							x:Name="ai_send"
							Click="SendClick"
							VerticalAlignment="Center"
							Content="发送"
							Margin="10 0 0 0"/>
						<Button
							x:Name="ai_img"
							Click="ImgPickClick"
							VerticalAlignment="Center"
							Content="图片选择"
							Margin="10 0 0 0"/>
						<CheckBox
							x:Name="ai_tools"
							Margin="10 0 0 0">
							是否使用工具插件
						</CheckBox>
					</DockPanel>
				</Border>
			</Grid>
		</Border>
		<Border Grid.Row="2" Background="LightGray">
			<DockPanel>
				<TextBlock
					x:Name="show_msg"
					FontSize="18"
					TextWrapping="Wrap"
					Text="Where there is a will, there is a way!"
					ToolTip.Tip="Ready"
					HorizontalAlignment="Center"
					VerticalAlignment="Center" />
			</DockPanel>
		</Border>
	</Grid>
</Window>