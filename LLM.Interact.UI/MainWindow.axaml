<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="LLM.Interact.UI.MainWindow"
		mc:Ignorable="d"
		Width="900" Height="450"
		WindowStartupLocation="CenterScreen"
		CanResize="False"
		Title="LLM.Interact.UI"
		>
	<Window.Resources>
	</Window.Resources>
	<Window.Styles>
		<Style Selector="Button:pointerover">
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style Selector="CheckBox:pointerover">
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style Selector="ComboBox:pointerover">
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style Selector="Button:focus">
			<Setter Property="Background" Value="Gray"/>
		</Style>
	</Window.Styles>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="LightGray">
			<DockPanel>
				<Label
					Content="Url:"
					Margin="10 0 0 0"
					VerticalAlignment="Center" />
				<TextBox
						x:Name="ai_url"
						VerticalAlignment="Center"
						Margin="10,0,0,0"
						Width="250"
						Height="20"
						TabIndex="0"
						Text="http://127.0.0.1:11434" />
				<Label
					Content="Name:"
					Margin="10 0 0 0"
					VerticalAlignment="Center" />
				<TextBox
						x:Name="model_name"
						VerticalAlignment="Center"
						Margin="10,0,0,0"
						Width="100"
						Height="20"
						TabIndex="0"
						Text="qwen2:7b" />
				<Button
					Click="StartClick"
					VerticalAlignment="Center"
					Content="连接"
					Margin="10 0 0 0"/>
				<Button
					Click="TestClick"
					VerticalAlignment="Center"
					Content="测试"
					Margin="10 0 0 0"/>
			</DockPanel>
		</Border>
		<Border Grid.Row="1" Background="LightGray">
			<Grid ColumnDefinitions="1*,3*">
				<Border Grid.Column="0" Background="WhiteSmoke">
				</Border>
				<Border Grid.Column="1" Background="LightBlue">
				</Border>
			</Grid>
		</Border>
		<Border Grid.Row="2" Background="LightGray">
			<DockPanel>
				<TextBlock
					x:Name="show_msg"
					FontSize="18"
					TextWrapping="Wrap"
					Text=""
					ToolTip.Tip="Ready"
					HorizontalAlignment="Center"
					VerticalAlignment="Center" />
			</DockPanel>
		</Border>
	</Grid>
</Window>